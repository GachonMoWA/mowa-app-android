<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <TextView
        android:id="@+id/item_phone_book_public_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="12dp"
        android:fontFamily="@font/nanumgothic_extrabold"
        android:text="@string/phone_book_name"
        android:textAppearance="@style/view_telephone_tab1_content_left"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/item_phone_book_public_number_tv"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_phone_book_public_number_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:gravity="center_vertical"
        android:text="@string/phone_book_number_with_format"
        android:textAppearance="@style/view_telephone_tab1_content_right"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/item_phone_book_public_name_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toEndOf="@id/item_phone_book_public_name_tv"
        app:layout_constraintTop_toTopOf="@id/item_phone_book_public_name_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>