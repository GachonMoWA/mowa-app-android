<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="start">

    <TextView
        android:id="@+id/item_speaker_left_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="5dp"
        android:fontFamily="@font/nanumgothic_bold"
        android:paddingStart="43dp"
        android:paddingTop="25dp"
        android:paddingEnd="17dp"
        android:paddingBottom="25dp"
        android:text="@string/app_name"
        android:textAppearance="@style/ai_content"
        android:background="@drawable/bg_speech_balloon_left"
        android:textSize="14sp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_speaker_left_basic_card"
        android:layout_width="311dp"
        android:layout_height="180dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_speech_balloon_left_basic_card"
        android:orientation="vertical"
        android:visibility="gone">


        <ImageView
            android:id="@+id/item_speaker_left_thumbnail"
            android:layout_width="283dp"
            android:layout_height="125dp"
            app:layout_constraintBottom_toTopOf="@id/item_speaker_left_button"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_centerInParent="true"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="22dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:background="@drawable/bg_speech_balloon_left_iv"
            android:scaleType="fitCenter"
            android:clipToOutline="true"
            android:outlineProvider="background"
            app:layout_constraintVertical_bias="0.695" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/item_speaker_left_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="283dp"
            android:layout_height="45dp"
            android:layout_marginLeft="22dp"
            android:layout_marginBottom="5dp"
            android:paddingBottom="5dp"
            android:background="@drawable/bg_speech_balloon_left_button"
            android:text="@string/speaket_basic_card_button"
            android:textAppearance="@style/ai_content"
            android:textAlignment="center"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>