<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/intro_large_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/nanumgothic_extrabold"
        android:gravity="center"
        android:text="@string/app_name"
        android:textAppearance="@style/mowa_green_color_text"
        android:textSize="64sp"
        app:layout_constraintBottom_toTopOf="@id/intro_large_description_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/intro_large_description_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:fontFamily="@font/nanumgothic"
        android:gravity="center"
        android:text="@string/app_description"
        android:textAppearance="@style/mowa_black_color_text"
        android:textColor="@color/gray"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@id/intro_large_google_login_cl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/intro_large_title_tv" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/intro_large_google_login_cl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/bg_empty_btn_black_large"
        android:paddingStart="10dp"
        android:paddingTop="50dp"
        android:paddingEnd="10dp"
        android:paddingBottom="50dp"
        app:layout_constraintBottom_toTopOf="@id/intro_large_title_login_tv"
        app:layout_constraintEnd_toStartOf="@id/intro_large_email_login_cl"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/intro_large_description_tv">

        <View
            android:id="@+id/intro_large_google_login_logo_v"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/ic_google_logo_large"
            app:layout_constraintBottom_toTopOf="@id/intro_large_google_login_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/intro_large_google_login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nanumgothic_extrabold"
            android:text="@string/mowa_google"
            android:textAppearance="@style/mowa_black_color_text"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/intro_large_google_login_logo_v" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/intro_large_email_login_cl"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/bg_empty_btn_black_large"
        android:paddingStart="10dp"
        android:paddingTop="50dp"
        android:paddingEnd="10dp"
        android:paddingBottom="50dp"
        app:layout_constraintBottom_toBottomOf="@id/intro_large_google_login_cl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/intro_large_google_login_cl"
        app:layout_constraintTop_toTopOf="@id/intro_large_google_login_cl">

        <View
            android:id="@+id/intro_large_email_login_logo_v"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/ic_at_sign_green_large"
            app:layout_constraintBottom_toTopOf="@id/intro_large_email_login_tv"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <TextView
            android:id="@+id/intro_large_email_login_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/nanumgothic_extrabold"
            android:text="@string/mowa_email_eng"
            android:textAppearance="@style/mowa_black_color_text"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/intro_large_email_login_logo_v" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/intro_large_title_login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/nanumgothic"
        android:text="@string/mowa_already_member"
        android:textAppearance="@style/mowa_black_color_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/intro_large_login_tv"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/intro_large_google_login_cl"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/intro_large_login_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/nanumgothic_extrabold"
        android:text="@string/mowa_go_to_login"
        android:textAppearance="@style/mowa_green_color_text"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/intro_large_title_login_tv"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/intro_large_title_login_tv"
        app:layout_constraintTop_toTopOf="@+id/intro_large_title_login_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>